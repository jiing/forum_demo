<p id="notice"><%= notice %></p>

<p>
  <b>Board Name:</b>
  <%= @board.name %>
</p>
<h1>Listing posts</h1>
<table>
	<tr>
		<th>Title</th>
		<th>Content</th>
		<th></th>
		<th></th>
		<th></th>
	</tr>
	<% @posts.each do |post| %>
	<tr>
		<th><%= post.title %></th>
		<th><%= post.content %></th>
		<th><%= link_to 'Show', board_post_path(@board, post) %></th>
		<% if current_user && post.user_id == current_user.id %>
		  <th><%= link_to 'Edit', edit_board_post_path(@board, post) %></th>
		  <th><%= link_to 'Destroy',  board_post_path(@board, post), :confirm=>'Are you sure?', :method=> :delete %></th>
		<% end %>
	</tr>
	<% end %>
</table>

<%= link_to 'New Post', new_board_post_path(@board) %> |
<%= link_to 'Edit', edit_board_path(@board) %> |
<%= link_to 'Back', boards_path %>
